{
  "name": "retrospective",
  "version": "1.0.0",
  "description": "retrospective tool",
  "main": "index.js",
  "scripts": {
    "test": "opn dist/index.html",
    "browserify": "browserify -t reactify src/app.jsx | uglifyjs -m -c > dist/app.js",
    "watchify": "npm run copy && watchify src/app.jsx -t reactify -o dist/app.js -dv",
    "myth": "myth src/source.css dist/style.css",
    "watch-myth": "npm run copy && myth --watch --verbose src/source.css dist/style.css",
    "watch": "npm run clean && npm run copy && npm run watch-browserify & npm run watch-myth",
    "build": "npm run clean && npm run copy && npm run browserify && npm run myth --compress",
    "copy": "copyfiles -f ./src/index.html ./dist",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/objectfoo/retrospective.git"
  },
  "author": "satake <satake@objectfoo.com> (https://github.com/objectfoo)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/objectfoo/retrospective/issues"
  },
  "homepage": "https://github.com/objectfoo/retrospective",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^9.0.8",
    "copyfiles": "^0.2.1",
    "envify": "^3.4.0",
    "event-emitter": "^0.3.3",
    "flux": "^2.0.1",
    "myth": "^1.5.0",
    "opn": "^1.0.1",
    "react": "^0.13.1",
    "reactify": "^1.1.0",
    "rimraf": "^2.4.3",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.1.0"
  }
}
